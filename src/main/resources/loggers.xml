<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="loggers.FileEventLogger" init-method="init" abstract="true">
        <constructor-arg value="logs.txt"/>
    </bean>

    <bean id="cacheEventLogger" class="loggers.CacheFileEventLogger" parent="eventLogger" destroy-method="destroy">
    <constructor-arg value="2"/>
    </bean>

</beans>